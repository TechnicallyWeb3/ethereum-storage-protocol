{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "esp.deployments.ts",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "scripts",
    "artifacts",
    "cache",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
} 